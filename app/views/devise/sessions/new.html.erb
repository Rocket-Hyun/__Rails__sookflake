<div class="container">
  <div class="row text-center">
  <img src="http://imgdb.kr/b4HP.dn" style= "width: 50%;margin-bottom: 20px;margin-top: 40px;" >
  </div>
  <div class="row">
                
         <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <label for="user_email">이메일</label><br />
                    <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
                  </div>

                  <div class="field">
                   <label for="user_password">비밀번호</label><br />
                   <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
                  </div>

             <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <label for="user_remember_me">로그인 상태 유지</label>
                  </div>
            <% end -%>
                </br>
                 <div class="form-group">
                        <button type="submit" class="btn btn-info">로그인</button>
                  </div>
        <% end %>
              <br/>  <%= render "devise/shared/links" %>
          </div>
  </div>
</div>



