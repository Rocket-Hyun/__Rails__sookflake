<div class="container">
  <div class="row text-center">
      <img src="http://imgdb.kr/b4IF.dn" style= "width: 50%;margin-bottom: 20px;margin-top: 40px;" >
  </div>
  <div class="row">
      
        <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group email-wrap">
          <label for="user_email">이메일</label><br/>
          <%= f.email_field :email, autofocus: true, :class => 'form-control email'  %>
        </div>
        <div class="warning">
          
        </div>

        <div class="form-group">
          <label for="user_password">비밀번호</label>
          <% if @minimum_password_length %>
       <em>(최소 <%= @minimum_password_length %>자)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => 'form-control'  %>
       </div>

        <div class="form-group">
          <label for="user_password_confirmation">비밀번호 확인</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'  %>
      </div>
</br>
      <div class="form-group">
          <button type="submit" class="btn btn-info" disabled="true">회원가입</button>
      </div>
  <% end %>
  
          <br/>  <%= render "devise/shared/links" %>
        </div>
  </div>
</div>



<script>


      $('.email').tooltip({'trigger':'focus', 'title': '@sookmyung.ac.kr'});

$("input[name='user[email]']").on("change paste keyup", function() {
  if ($(".email").val().indexOf("@sookmyung.ac.kr") !== -1) {
      $(".btn").attr("disabled", false);
      $('.email-wrap').removeClass("has-error");
  } else {
      $(".btn").attr("disabled", true);
      $('.email').tooltip({'trigger':'focus', 'title': 'Password tooltip'});
      $('.email-wrap').addClass("has-error");
  }
});
</script>