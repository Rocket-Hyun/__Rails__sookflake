<div class="container-fluid bg-1 text-center" style="margin-bottom: 50px;padding-bottom: 60px; padding-top: 50px;">
  <img src="http://imgdb.kr/b4zn.dn" class="img-responsive img-circle margin" style="display:inline;margin-top: 50px;" width="150" height="350">
  <h4 style ="color:#898080;"><%= current_user.email %></h4>
  </div>
  
 
 
  <!--참여프로젝트-->
