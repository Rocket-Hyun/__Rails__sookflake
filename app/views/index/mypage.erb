        <label for="ProjectsName1" style="margin-bottom: 20px;">내가 참여한 공구</label>
        <!-- Page Features -->
                <!-- /.row -->
    
            <!-- Page Features -->
     
  <div class="row text-center">
      
      <% if @mymy.size == 0 %>
           <div class="alert alert-info" role="alert">
              <a href="/index/read" class="alert-link">
                  아직 공구에 참여하지 않았습니다!<br>공구에 참여해보세요!
              </a>
            </div>
      <% else %>
         <% @mymy.each do |p| %> 
           <a href="/index/rewrite/<%= p.project_id %>">
            <div class="col-md-3 col-xs-6 hero-feature">
                <div class="thumbnail">
                    <div class="inner-img" style="width:100%;height:300px; background-color:black; background-image: url('<%= Project.find(p.project_id).img_url %>'); background-repeat: no-repeat;background-position: 50% 25%; background-size:cover;"></div>
                    <div class="caption">
                        <h4 style="color:#36A8C5"><%= Project.find(p.project_id).title %><br/><small><%= Project.find(p.project_id).detail.first(18) %>...</small></h4>
                        
                        <hr style="margin:10px 10px;"/>
                        <div class="row">
                            <div class="col-xs-6">
                            <h5 style="color:gray"><%= Project.find(p.project_id).price %> 원</h5>
                            </div>
                            <div class="col-xs-6">
                            <h5 style="color:gray"><%= Project.find(p.project_id).deadline %></h5>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/index/exit_pj/<%= p.project_id %>"><button type="submit" class="btn btn-sm" style="margin-bottom: 40px;">
                    참여취소</button></a>

            </div>
           </a>
           <%end%>
       <% end %>
